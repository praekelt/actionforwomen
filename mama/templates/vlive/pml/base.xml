<?xml version="1.0" encoding="UTF-8"?>
{% load mama_inclusion_tags pml_inclusion_tags %}
<VZV-PARTNER xmlns:dc="http://purl.org/dc/elements/1.1/"
             xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
             xmlns:vddr="http://namespaces.vodafone.com/applications/CRE#DDR"
             xmlns:vmpml="http://namespaces.vodafone.com/applications/3PI#MPML"
             xmlns:vsrch="http://namespaces.vodafone.com/applications/search#"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:noNamespaceSchemaLocation="http://www.via.vodafone.com/schema/VZV-PARTNER.xsd">
    <PARTNER-PI>
        <TRANSFORMER name="VZV-DEFAULT"/>
    </PARTNER-PI>
    <PARTNER-BODY>
        {% block header %}
        {% endblock %}
        <VZV-DEFAULT>
            {% pml_page_header %}

            {% block body %}
            {% endblock %}

            {% header text='Share This Site' color='orange' %}
            <MODULE>
                <CONTAINER type="data">
                    <TEXT>
                        Share This: <LINK href="http://twitter.com/home?status=MAMA - Mobile Alliance for Maternal Action http://askmama.mobi"><IMAGE href="{{ STATIC_URL }}mama/img/twitter.png"></IMAGE></LINK><LINK href="http://www.facebook.com/sharer.php?u=http://askmama.mobi%26t=MAMA - Mobile Alliance for Maternal Action"><IMAGE href="{{ STATIC_URL }}mama/img/facebook.png"></IMAGE></LINK>
                    </TEXT>
                </CONTAINER>
            </MODULE>

            {% header text='Search' color='orange' %}
            {% include 'mama/inclusion_tags/search_form.html' %}

        </VZV-DEFAULT>
    </PARTNER-BODY>
</VZV-PARTNER>
